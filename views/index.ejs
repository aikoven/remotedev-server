<!DOCTYPE html>
<html>
  <head>
  <meta charset="utf-8" />
  <title>RemoteDev</title>
    <style>
      html {
        min-width: 350px;
        min-height: 300px;
      }
      body {
        position: fixed;
        overflow: hidden;
        height: 100%;
        width: 100%;
        margin: 0;
        padding: 0;
      }
      #root {
        height: 100%;
      }
      #root > div {
        height: 100%;
      }
    </style>
  </head>
  <body>
    <div id="root"></div>
    <script src="//unpkg.com/@aikoven/remotedev-app@0.0.7/dist/remotedev-app.js"></script>
    <script>
      window.remotedevOptions = {
        hostname: location.hostname,
        port: location.port,
        autoReconnect: true
      };
      RemoteDevApp(document.querySelector('#root'), {
        socketOptions: window.remotedevOptions
      });
    </script>
  </body>
</html>
